<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.seeyon.v3x.hr.domain.Relationship" table="hr_staff_relationship">
		<id name="id" type="long" column="id" length="20">
			<generator class="assigned" />
		</id>
		<property name="relationship" type="string" column="relationship"
			length="255" not-null="true" />
		<property name="name" type="string" column="name" length="255" />
		<property name="organization" type="string" column="organization"
			length="255" not-null="true" />
		<property name="post" type="string" column="post" length="255" />
		<property name="birthday" type="timestamp" column="birthday"
			length="19" />
		<property name="political_position" type="integer" column="political_position"
			length="1" />
		<property name="member_id" type="long" column="member_id"
			length="20" not-null="true" />		<property name="cardid" type="string" column="cardid"			length="100" />		<property name="tel" type="string" column="tel"			length="100" />
	</class>
</hibernate-mapping>
