<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.seeyon.v3x.hr.domain.WorkRecord" table="hr_staff_work_record">
		<id name="id" type="java.lang.Long">
			<column name="id" />
			<generator class="assigned" />
		</id>
		<property
          name="start_time"
          type="timestamp"
          column="start_time"
          length="19"
        />
        <property
          name="end_time"
          type="timestamp"
          column="end_time"
          length="19"
        />
        <property
          name="organization"
          type="string"
          column="organization"
          length="255"
        />
        <property
          name="level"
          type="string"
          column="rank"
          length="255"
        />
        <property
          name="department"
          type="string"
          column="department"
          length="255"
        />
        <property
          name="post"
          type="string"
          column="post"
          length="255"
        />
        <property
          name="reference"
          type="string"
          column="reference"
          length="255"
        />
	    <property
          name="member_id"
          type="long"
          column="member_id"
          length="20"
          not-null="true"
        />
         <property
          name="country"
          type="string"
          column="country"
          length="255"
        />
         <property
          name="city"
          type="string"
          column="city"
          length="255"
        />
        <property
          name="remark"
          type="string"
          column="remark"
          length="1000"
        />
    </class>
</hibernate-mapping>
