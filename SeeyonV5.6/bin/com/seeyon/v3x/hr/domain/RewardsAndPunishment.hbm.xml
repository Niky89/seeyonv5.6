<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.seeyon.v3x.hr.domain.RewardsAndPunishment" table="hr_staff_rewards_punishment">
		<id name="id" type="java.lang.Long">
			<column name="id" />
			<generator class="assigned" />
		</id>
		<property
          name="time"
          type="timestamp"
          column="create_time"
          length="19"
        />
	    <property
          name="type"
          type="integer"
          column="type"
          length="1"
        />
        <property
          name="reason"
          type="string"
          column="reason"
        />
        <property
          name="content"
          type="string"
          column="content"
        />
        <property
          name="organization"
          type="string"
          column="organization"
          length="255"
        />
        <property
          name="member_id"
          type="long"
          column="member_id"
          length="20"
          not-null="true"
        />
    </class>
</hibernate-mapping>